html(ng-app='mySystemApp')
  head
    // Latest compiled and minified CSS
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')
    // Optional theme
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css')
    title Machine Status
  body
    .container(ng-controller='AppCtrl')
      h1 Subsystem Status
      br
      h2 MC1 Status: 
      table.table
        thead
          tr
            th Index
            th OrderID
            th Max Alert Level
            th Status
            th Status Change
            th Color Change
        tbody
          tr(ng-repeat='mc1 in myMcone')
            td {{$index + 1}}
            td {{mc1.orderID}}
            td {{mc1.maxAlertLevel}}
            td {{mc1.status}}
            td {{mc1.statusChange}}
            td {{mc1.colorChange}}
      h2 MC2 Status: 
      table.table
        thead
          tr
            th Index
            th OrderID
            th Max Alert Level
            th Status
            th Status Change
            th Color Change
        tbody
          tr(ng-repeat='mc2 in myMctwo')
            td {{$index + 1}}
            td {{mc2.orderID}}
            td {{mc2.maxAlertLevel}}
            td {{mc2.status}}
            td {{mc2.statusChange}}
            td {{mc2.colorChange}}
      h2 CC Status: 
      table.table
        thead
          tr
            th Index
            th OrderID
            th Max Alert Level
            th Status
            th Status Change
            th Color Change
        tbody
          tr(ng-repeat='cc in myCc')
            td {{$index + 1}}
            td {{cc.orderID}}
            td {{cc.maxAlertLevel}}
            td {{cc.status}}
            td {{cc.statusChange}}
            td {{cc.colorChange}}
      hr
      div
        h3 Return to visualization page 
        button(onclick="window.location.href='/viz'") Home
      hr
      script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.12/angular.min.js')
      script(src='controllers/newcontroller.js')
